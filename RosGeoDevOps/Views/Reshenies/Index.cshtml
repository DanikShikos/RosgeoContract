@model IEnumerable<RosGeoDevOps.Reshenie>

@{
    ViewBag.Title = "Index";
}

<h2>Список</h2>

<p>
    @Html.ActionLink("Добавить запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sotrudnik.Fam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zapro.Nom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sotrudnik.Fam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zapro.Nom)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.ID_Reshenie }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.ID_Reshenie }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_Reshenie })
        </td>
    </tr>
}

</table>
