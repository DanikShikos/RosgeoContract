@model GameBlog.Areas.Admin.Models.UserUpdateViewModel

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование пользователя</h2>
@using (Html.BeginForm("Update", "Users", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, "Имя пользователя")<br />
        @Html.EditorFor(m => m.UserName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, "Email пользователя")<br />
        @Html.EditorFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Year, "Введите год рождения")<br />
        @Html.EditorFor(m => m.Year)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RoleId, "Роль пользователя в системе")<br />
        @Html.DropDownListFor(m => m.RoleId, ViewBag.Roles as SelectList)
    </div>

    <input type="submit" value="Добавить пользователя" />
}
