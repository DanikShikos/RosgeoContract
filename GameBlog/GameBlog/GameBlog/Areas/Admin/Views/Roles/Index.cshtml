@model IEnumerable<GameBlog.Models.ApplicationRole>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <h2 class="col-lg-9">Панель управления ролями</h2>
    <div class="col-lg-3">
        @Html.ActionLink("Добавить роль", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Name</th>
                <td scope="col">@item.Description</td>
                <td scope="col">
                    @Html.ActionLink("Delete", "Delete", new { id = @item.Id }, new { @class = "btn btn-primary" })
                </td>
                <td scope="col">
                    @Html.ActionLink("Edit", "Edit", new { id = @item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>