@model GameBlog.Areas.Admin.Models.CreateArticleViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление новой статьи</h2>
@using (Html.BeginForm("Add","Articles",FormMethod.Post))
{
    
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Title, "Название статьи")<br />
        @Html.EditorFor(m => m.Title,new {htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Fulltext, "Текст статьи")<br />
        @Html.TextAreaFor(m => m.Fulltext,10,3,new {@class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CategoryId, "Категории")<br />
        @Html.DropDownListFor(m => m.CategoryId, ViewBag.Category as SelectList,new { @class = "custom-select" })
    </div>

    <input type="submit" value="Добавить статью" />
}

