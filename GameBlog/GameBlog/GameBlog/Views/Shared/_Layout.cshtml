<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <title>@ViewBag.Title - GameBlog</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
         @Html.ActionLink("GameBLOG", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Игровые новости", "Category", "Home", new { area = "", name = "Игровые новости" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Киберспорт", "Category", "Home", new { area = "", name = "Киберспорт" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Обзоры", "Category", "Home", new { area = "", name = "Обзор" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Статьи", "Category", "Home", new { area = "", name = "Статья" }, new { @class = "nav-link" })
                </li>    
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container">   
        @RenderBody()
    </div>
    


    <script src="~/scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>